<p>
  <strong>Name:</strong>
  <%= @question.title %>
  </br>
  <strong>Answer:</strong>
  <%= @question.description %>
</p>
    <% if @question.answers%>
    <% @answers.each do |answer| %>
      <tr>
      <td><%= answer.description %></td>
      </tr>
    <% end %>
    <% end %>



<%= form_for [@question, @answer] do |f| %>
    <%= f.label :description %><br />
    <%= f.text_field :description %>

    <%= f.submit %>
<% end %>

<%= link_to 'Back', questions_path %>